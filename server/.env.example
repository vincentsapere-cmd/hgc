# =============================================================================
# HOME GROWN CREATIONS - ENTERPRISE E-COMMERCE CONFIGURATION
# =============================================================================
# Copy this file to .env and replace placeholder values with your actual credentials
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=5000
API_VERSION=v1
FRONTEND_URL=https://homegrowncreations.thepfps.xyz
CORS_ORIGINS=https://homegrowncreations.thepfps.xyz,http://localhost:3000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# MySQL (recommended for production)
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=hgc_enterprise
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# SQLite (for development/small deployments - uncomment if needed)
# DATABASE_TYPE=sqlite
# DATABASE_PATH=./data/hgc_enterprise.db

# PostgreSQL (alternative - uncomment and configure)
# DATABASE_TYPE=postgresql
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=hgc_enterprise
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_SSL=true

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# JWT Secret - MUST BE CHANGED IN PRODUCTION (minimum 64 characters)
JWT_SECRET=REPLACE_WITH_SECURE_64_CHARACTER_MINIMUM_SECRET_KEY_HERE_CHANGE_ME
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Secret - MUST BE CHANGED IN PRODUCTION
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_KEY_HERE_CHANGE_ME

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=300000

# -----------------------------------------------------------------------------
# PAYPAL CONFIGURATION - FULL SDK INTEGRATION
# -----------------------------------------------------------------------------
# Mode: 'sandbox' for testing, 'live' for production
PAYPAL_MODE=sandbox

# Sandbox Credentials (for testing)
PAYPAL_SANDBOX_CLIENT_ID=REPLACE_WITH_YOUR_PAYPAL_SANDBOX_CLIENT_ID
PAYPAL_SANDBOX_CLIENT_SECRET=REPLACE_WITH_YOUR_PAYPAL_SANDBOX_CLIENT_SECRET

# Live/Production Credentials
PAYPAL_LIVE_CLIENT_ID=REPLACE_WITH_YOUR_PAYPAL_LIVE_CLIENT_ID
PAYPAL_LIVE_CLIENT_SECRET=REPLACE_WITH_YOUR_PAYPAL_LIVE_CLIENT_SECRET

# PayPal Webhook ID (for verifying webhook signatures)
PAYPAL_WEBHOOK_ID=REPLACE_WITH_YOUR_PAYPAL_WEBHOOK_ID

# PayPal Business Email
PAYPAL_BUSINESS_EMAIL=REPLACE_WITH_YOUR_PAYPAL_BUSINESS_EMAIL

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (SMTP)
# -----------------------------------------------------------------------------
# Email Provider: 'smtp', 'sendgrid', 'mailgun', 'ses'
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=REPLACE_WITH_YOUR_EMAIL_USERNAME
SMTP_PASSWORD=REPLACE_WITH_YOUR_EMAIL_PASSWORD

# SendGrid (alternative - uncomment if using)
# SENDGRID_API_KEY=REPLACE_WITH_YOUR_SENDGRID_API_KEY

# Mailgun (alternative - uncomment if using)
# MAILGUN_API_KEY=REPLACE_WITH_YOUR_MAILGUN_API_KEY
# MAILGUN_DOMAIN=your-domain.mailgun.org

# AWS SES (alternative - uncomment if using)
# AWS_ACCESS_KEY_ID=REPLACE_WITH_YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=REPLACE_WITH_YOUR_AWS_SECRET_KEY
# AWS_REGION=us-east-1

# Email Addresses
EMAIL_FROM=noreply@homegrowncreations.com
EMAIL_FROM_NAME=Home Grown Creations
EMAIL_REPLY_TO=support@homegrowncreations.com
ADMIN_EMAIL=admin@homegrowncreations.com
ORDERS_EMAIL=orders@homegrowncreations.com

# -----------------------------------------------------------------------------
# BUSINESS CONFIGURATION
# -----------------------------------------------------------------------------
BUSINESS_NAME=Home Grown Creations
BUSINESS_ADDRESS=123 Main Street, City, State 12345
BUSINESS_PHONE=+1 (234) 567-890
BUSINESS_SUPPORT_EMAIL=support@homegrowncreations.com
BUSINESS_WEBSITE=https://homegrowncreations.com

# Tax Configuration
TAX_ENABLED=true
DEFAULT_TAX_RATE=8.25

# Shipping Configuration
SHIPPING_FLAT_RATE=15.00
FREE_SHIPPING_THRESHOLD=100.00

# -----------------------------------------------------------------------------
# FILE UPLOAD CONFIGURATION
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# -----------------------------------------------------------------------------
# TWO-FACTOR AUTHENTICATION (ADMIN)
# -----------------------------------------------------------------------------
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=HomeGrownCreations

# -----------------------------------------------------------------------------
# ENCRYPTION KEYS
# -----------------------------------------------------------------------------
# Used for encrypting sensitive data at rest (gift cards, etc.)
ENCRYPTION_KEY=REPLACE_WITH_32_CHARACTER_ENCRYPTION_KEY
ENCRYPTION_IV=REPLACE_WITH_16_CHAR_IV

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------
# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Redis (for caching/sessions in production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
