# =============================================================================
# HOME GROWN CREATIONS - HOSTINGER PRODUCTION CONFIGURATION
# =============================================================================
# Copy this to .env on your Hostinger server and fill in all values
# CRITICAL: Never commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=5000
API_VERSION=v1
FRONTEND_URL=https://homegrowncreations.thepfps.xyz
CORS_ORIGINS=https://homegrowncreations.thepfps.xyz

# -----------------------------------------------------------------------------
# MYSQL DATABASE (Hostinger)
# -----------------------------------------------------------------------------
# Get these from Hostinger hPanel > Databases > MySQL Databases
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=u123456789_hgc
DATABASE_USER=u123456789_hgcuser
DATABASE_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD

# -----------------------------------------------------------------------------
# SECURITY SECRETS (Generate secure random strings!)
# -----------------------------------------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_CHAR_RANDOM_STRING_HERE_USE_CRYPTO_RANDOMYTES
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_32_CHAR_RANDOM_STRING_HERE

# Generate exactly 32 character key
ENCRYPTION_KEY=GENERATE_32_CHARACTER_ENCRYPTION_K
ENCRYPTION_IV=GENERATE_16_CHARS!!

# Password security
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=300000

# -----------------------------------------------------------------------------
# PAYPAL LIVE CONFIGURATION
# -----------------------------------------------------------------------------
PAYPAL_MODE=live
PAYPAL_LIVE_CLIENT_ID=YOUR_PAYPAL_LIVE_CLIENT_ID
PAYPAL_LIVE_CLIENT_SECRET=YOUR_PAYPAL_LIVE_CLIENT_SECRET
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_WEBHOOK_ID
PAYPAL_BUSINESS_EMAIL=your-business@email.com

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Hostinger Email)
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@homegrowncreations.thepfps.xyz
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD

# Email addresses
EMAIL_FROM=noreply@homegrowncreations.thepfps.xyz
EMAIL_FROM_NAME=Home Grown Creations
EMAIL_REPLY_TO=support@homegrowncreations.thepfps.xyz
ADMIN_EMAIL=admin@homegrowncreations.thepfps.xyz
ORDERS_EMAIL=orders@homegrowncreations.thepfps.xyz

# -----------------------------------------------------------------------------
# BUSINESS INFORMATION
# -----------------------------------------------------------------------------
BUSINESS_NAME=Home Grown Creations
BUSINESS_ADDRESS=Your Business Address
BUSINESS_PHONE=+1 (XXX) XXX-XXXX
BUSINESS_SUPPORT_EMAIL=support@homegrowncreations.thepfps.xyz
BUSINESS_WEBSITE=https://homegrowncreations.thepfps.xyz

# -----------------------------------------------------------------------------
# TAX AND SHIPPING
# -----------------------------------------------------------------------------
TAX_ENABLED=true
DEFAULT_TAX_RATE=8.25
SHIPPING_FLAT_RATE=15.00
FREE_SHIPPING_THRESHOLD=100.00

# -----------------------------------------------------------------------------
# FILE UPLOADS
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# -----------------------------------------------------------------------------
# TWO-FACTOR AUTHENTICATION
# -----------------------------------------------------------------------------
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=HomeGrownCreations

# -----------------------------------------------------------------------------
# ADMIN SECURITY (Optional but recommended)
# -----------------------------------------------------------------------------
# Uncomment and set to restrict admin access to specific IPs
# ADMIN_IP_ALLOWLIST=YOUR_OFFICE_IP,YOUR_HOME_IP
TRUST_PROXY=true
